<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/cesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/carrito2"
        android:onClick="seguirComprando"
        android:text=" SEGUIR COMPRANDO"
        android:textColor="@android:color/white"
        app:backgroundTint="#1A48F2" />

    <Button
        android:id="@+id/Cesta"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@+id/cesta"
        android:layout_toRightOf="@+id/cesta"
        android:onClick="confirmarCompra"
        android:text="CONFIRMAR COMPRA"
        android:textColor="@android:color/white"
        app:backgroundTint="#32CD32" />

    <TextView
        android:id="@+id/txtSeries"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="55dp"
        android:text="MI CARRITO"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCarritoImporteTotal"
        android:layout_width="247dp"
        android:layout_height="34dp"
        android:layout_below="@+id/txtDatosCliente"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDatosCliente"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSeries"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:text="Clientes Logeado"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ListadoCompra"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"

        android:layout_marginLeft="2dp"
        android:layout_marginTop="157dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cesta"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:onClick="cerrarSesion"
        android:text="Cerrar Sesion" />

</RelativeLayout>
