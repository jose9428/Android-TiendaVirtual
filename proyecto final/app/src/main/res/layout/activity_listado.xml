<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/cesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/carrito2"
        android:onClick="seguirComprando"
        android:text=" SEGUIR COMPRANDO"
        android:textColor="@android:color/white"
        app:backgroundTint="#1A48F2" />

    <ListView
        android:id="@+id/listado"
        android:layout_width="match_parent"
        android:layout_height="585dp"
        android:layout_below="@+id/txtSeries"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="47dp" />

    <Button
        android:id="@+id/Cesta"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@+id/cesta"
        android:layout_toRightOf="@+id/cesta"
        android:onClick="aceptarCompra"
        android:text="ACEPTAR COMPRA"
        android:textColor="@android:color/white"
        app:backgroundTint="#32CD32" />

    <TextView
        android:id="@+id/txtSeries"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="55dp"
        android:text="MI CARRITO"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCarritoImporteTotal"
        android:layout_width="247dp"
        android:layout_height="34dp"
        android:layout_below="@+id/txtSeries"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
